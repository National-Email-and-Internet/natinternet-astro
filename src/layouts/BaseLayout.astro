---
interface Props {
  title?: string;
  description?: string;
}

const { title = 'NEIC - Secure Email & Web Hosting', description = 'National Email and Internet Corp - Safe, secure, robust email and web hosting for your business.' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="font-sans antialiased bg-white text-gray-900">
  <nav class="bg-navy-900 text-white py-4 px-6">
    <div class="max-w-6xl mx-auto flex items-center justify-between">
      <a href="/" class="flex items-center">
        <img src="/logo.png" alt="NEIC" class="h-10 w-auto" />
      </a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center gap-6">
        <a href="/" class="hover:text-teal-500 transition">Home</a>
        <a href="/personal-email/" class="hover:text-teal-500 transition">Personal Email</a>
        <a href="https://help.natinternet.com" class="hover:text-teal-500 transition">Knowledge Base</a>
        <a href="https://webmail.natinternet.com" class="hover:text-teal-500 transition">Webmail</a>
        <a href="http://billing.stripe.com/p/login/eVa9B41Dc2zR1Fe8ww" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg transition">My Account</a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg hover:bg-white/10 transition">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pt-4 border-t border-white/10">
      <div class="flex flex-col gap-4">
        <a href="/" class="hover:text-teal-500 transition py-2">Home</a>
        <a href="/personal-email/" class="hover:text-teal-500 transition py-2">Personal Email</a>
        <a href="https://help.natinternet.com" class="hover:text-teal-500 transition py-2">Knowledge Base</a>
        <a href="https://webmail.natinternet.com" class="hover:text-teal-500 transition py-2">Webmail</a>
        <a href="http://billing.stripe.com/p/login/eVa9B41Dc2zR1Fe8ww" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg transition text-center mt-2">My Account</a>
      </div>
    </div>
  </nav>
  
  <script>
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    btn?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  </script>
  
  <main>
    <slot />
  </main>
  
  <footer class="bg-navy-950 text-gray-300 py-12 px-6">
    <div class="max-w-6xl mx-auto grid md:grid-cols-3 gap-8">
      <div>
        <img src="/logo.png" alt="NEIC" class="h-10 w-auto mb-4" />
        <p class="text-sm">Secure email and web hosting for your business since 1996.</p>
      </div>
      <div>
        <h4 class="text-white font-semibold mb-4">Contact</h4>
        <p class="text-sm">+1 (866) 667-9277</p>
        <p class="text-sm">support@natinternet.com</p>
      </div>
      <div>
        <h4 class="text-white font-semibold mb-4">Quick Links</h4>
        <ul class="text-sm space-y-2">
          <li><a href="/terms-of-service/" class="hover:text-white transition">Terms of Service</a></li>
          <li><a href="/privacy-policy-for-national-email-and-internet-corp/" class="hover:text-white transition">Privacy Policy</a></li>
          <li><a href="/cancellation-policy/" class="hover:text-white transition">Cancellation Policy</a></li>
          <li><a href="/contact-us/" class="hover:text-white transition">Contact Us</a></li>
        </ul>
      </div>
    </div>
    <div class="max-w-6xl mx-auto mt-8 pt-8 border-t border-gray-800 text-sm text-center">
      Â© {new Date().getFullYear()} National Email and Internet Corp. All rights reserved.
    </div>
  </footer>
</body>
</html>