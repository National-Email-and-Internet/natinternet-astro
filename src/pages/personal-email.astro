<style>
  /* Floating envelopes animation */
  .envelope {
    position: absolute;
    opacity: 0.12;
    animation: float-envelope 8s ease-in-out infinite;
  }
  
  @keyframes float-envelope {
    0%, 100% { transform: translateY(0) rotate(-3deg); }
    50% { transform: translateY(-20px) rotate(3deg); }
  }
  
  /* 20 unique envelope positions and timings */
  .envelope:nth-child(1) { top: 10%; left: 5%; animation-delay: 0s; animation-duration: 7s; }
  .envelope:nth-child(2) { top: 20%; right: 10%; animation-delay: 1s; animation-duration: 9s; }
  .envelope:nth-child(3) { top: 60%; left: 15%; animation-delay: 2s; animation-duration: 8s; }
  .envelope:nth-child(4) { top: 70%; right: 8%; animation-delay: 0.5s; animation-duration: 10s; }
  .envelope:nth-child(5) { top: 40%; left: 3%; animation-delay: 3s; animation-duration: 7.5s; }
  .envelope:nth-child(6) { top: 85%; left: 25%; animation-delay: 1.5s; animation-duration: 9.5s; }
  .envelope:nth-child(7) { top: 30%; right: 20%; animation-delay: 2.5s; animation-duration: 8.5s; }
  .envelope:nth-child(8) { top: 50%; right: 3%; animation-delay: 0.8s; animation-duration: 7s; }
  .envelope:nth-child(9) { top: 15%; left: 20%; animation-delay: 1.2s; animation-duration: 11s; }
  .envelope:nth-child(10) { top: 5%; right: 25%; animation-delay: 2.2s; animation-duration: 8.2s; }
  .envelope:nth-child(11) { top: 45%; left: 12%; animation-delay: 0.3s; animation-duration: 9.5s; }
  .envelope:nth-child(12) { top: 55%; right: 18%; animation-delay: 1.8s; animation-duration: 7.2s; }
  .envelope:nth-child(13) { top: 80%; right: 30%; animation-delay: 3.5s; animation-duration: 10.5s; }
  .envelope:nth-child(14) { top: 10%; right: 2%; animation-delay: 0.6s; animation-duration: 8.8s; }
  .envelope:nth-child(15) { top: 35%; left: 25%; animation-delay: 2.8s; animation-duration: 9.2s; }
  .envelope:nth-child(16) { top: 65%; right: 5%; animation-delay: 1.2s; animation-duration: 7.5s; }
  .envelope:nth-child(17) { top: 90%; left: 10%; animation-delay: 0.9s; animation-duration: 11.2s; }
  .envelope:nth-child(18) { top: 25%; left: 35%; animation-delay: 3.2s; animation-duration: 8.5s; }
  .envelope:nth-child(19) { top: 75%; left: 2%; animation-delay: 1.5s; animation-duration: 9.8s; }
  .envelope:nth-child(20) { top: 5%; left: 45%; animation-delay: 2.5s; animation-duration: 7.9s; }
  
  .domain-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .domain-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.1);
  }
</style>

