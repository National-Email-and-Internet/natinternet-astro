---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us - NEIC">
  <section class="py-20 px-6">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold mb-8 text-center">Get In Touch With Us</h1>
      
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <h2 class="text-2xl font-bold mb-6">Canada</h2>
          <p class="text-gray-600 mb-2">PO Box 19141</p>
          <p class="text-gray-600 mb-2">RPO Fourth Avenue</p>
          <p class="text-gray-600 mb-4">Vancouver BC Canada V6K4R8</p>
          
          <h2 class="text-2xl font-bold mb-6 mt-8">United States</h2>
          <p class="text-gray-600 mb-2">2390 Peace Portal Dr, Unit #11636</p>
          <p class="text-gray-600 mb-4">Blaine, WA 98230</p>
        </div>
        
        <div>
          <h2 class="text-2xl font-bold mb-6">Contact Information</h2>
          
          <div class="mb-6">
            <h3 class="font-semibold mb-2">Phone Call</h3>
            <a href="tel:+18666679277" class="text-blue-600 hover:text-blue-700">+1 (866) 667-9277</a>
          </div>
          
          <div class="mb-6">
            <h3 class="font-semibold mb-2">Send Us A Message</h3>
            <a href="mailto:support@natinternet.com" class="text-blue-600 hover:text-blue-700">support@natinternet.com</a>
          </div>
          
          <div class="mt-8 p-6 bg-gray-50 rounded-xl">
            <h3 class="font-semibold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href="https://webmail.natinternet.com" class="text-blue-600 hover:text-blue-700">Webmail Login</a></li>
              <li><a href="https://help.natinternet.com/hc/2625363690" class="text-blue-600 hover:text-blue-700">Knowledge Base</a></li>
              <li><a href="https://help.natinternet.com/help/2625363690" class="text-blue-600 hover:text-blue-700">My Support</a></li>
              <li><a href="/contact-us/" class="text-blue-600 hover:text-blue-700">My Account</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>